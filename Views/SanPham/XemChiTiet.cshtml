@model WebGURDIAN.Models.SANPHAM
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="row">
        <div class="container">
            <div class="product-image">
                <img id="main-image"
                     src="@Url.Content("~/images/" + Model.HINH)"
                     alt="Main Product Image" />
                <div class="thumbnail-container">
                    <img src="@Url.Content("~/images/" + Model.HINH)"
                         class="thumbnail"
                         onclick="changeImage('@Url.Content("~/images/" + Model.HINH)')"
                         alt="Thumbnail 1" />
                    <img src="~/images/logo_chenChiTiet.png"
                         class="thumbnail"
                         onclick="changeImage('@Url.Content("~/images/" + Model.HINH)')"
                         alt="Thumbnail 2" />
                </div>
            </div>
            <div class="product-info">
                <h1>@Model.TENSP</h1>
                <div class="price">
                @{
                    // Giả sử Model.GIA là giá mới (new price)
                    var newPrice = Model.GIA;
                    // Tính toán giá cũ (old price) với giảm giá 18%
                    var discountPercentage = 0.18m;
                    var oldPrice = newPrice / (1 - discountPercentage);
                }

                <span class="new-price">@String.Format("{0:0,0} VND", newPrice)</span>
                <span class="old-price">@String.Format("{0:0,0} VND", oldPrice)</span>
                <span class="discount">-18%</span>

                </div>
                <div class="size">Phân loại: @Model.DANHMUCSP.TENDM</div>
                @*<div class="quantity">
                    <button onclick="decrement()">-</button>
                    <input type="text" id="quantity" value="1" />
                    <button onclick="increment()">+</button>
                </div>*@
                <div class="actions">
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @msp = @Model.MASP, @strURL = Request.Url.ToString() })" class="add-to-cart-link">
                        <button class="add-to-cart">Thêm vào giỏ</button>
                    </a>
                    <a href="@Url.Action("SanPhamAll", "SanPham", new { @msp = @Model.MASP, @strURL = Request.Url.ToString() })" class="buy-now-link">
                        <button class="buy-now">Tiếp tục mua sắm</button>
                    </a>
                </div>

                <div class="voucher">
                    <h3>Voucher Tiết Kiệm</h3>
                    <ul>
                        <li>Voucher G11 - Giảm 11% cho đơn hàng từ 249k (tối đa 80k)</li>
                        <li>Voucher VC60K - Giảm 60K cho đơn hàng từ 499K</li>
                        <li>Voucher KHOEDEP30K - Giảm 30K cho đơn hàng từ 399k</li>
                        <li>Voucher KHOEDEP50K - Giảm 50K cho đơn hàng từ 599k</li>
                    </ul>
                </div>
            </div>
        </div>
        <script src="~/JS/ChiTietSanPham.js"></script>
    </div>
</body>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
    }

    .container {
        display: flex;
        max-width: 900px;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .product-image {
        flex: 1;
        text-align: center;
    }

    #main-image {
        max-width: 100%;
        height: auto;
    }

    .thumbnail-container {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .thumbnail {
        width: 50px;
        height: 50px;
        margin: 0 5px;
        cursor: pointer;
        border: 1px solid #ddd;
    }

        .thumbnail:hover {
            border: 2px solid #f90;
        }

    .product-info {
        flex: 1;
        padding-left: 20px;
    }

        .product-info h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

    .price {
        font-size: 20px;
        margin-bottom: 10px;
    }

    .new-price {
        color: #f90;
        font-weight: bold;
        margin-right: 10px;
    }

    .old-price {
        text-decoration: line-through;
        color: #888;
        margin-right: 10px;
    }

    .discount {
        color: #d9534f;
    }

    .size {
        margin-bottom: 20px;
    }

    .quantity {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .quantity button {
            background-color: #ddd;
            border: 1px solid #ccc;
            padding: 5px;
            cursor: pointer;
            width: 30px;
            height: 30px;
            line-height: 20px;
            border-radius: 50%;
            font-size: 16px;
        }

        .quantity input {
            width: 40px;
            text-align: center;
            border: 1px solid #ddd;
            margin: 0 5px;
            height: 30px;
            line-height: 30px;
            font-size: 16px;
        }

    .actions {
        margin-bottom: 20px;
    }

    .add-to-cart,
    .buy-now {
        padding: 10px 20px;
        margin-right: 10px;
        cursor: pointer;
        border: none;
        color: #fff;
        font-size: 16px;
        border-radius: 25px;
    }

    .add-to-cart {
        background-color: #f90;
    }

    .buy-now {
        background-color: #d9534f;
    }

    .voucher {
        background-color: #f8f8f8;
        padding: 10px;
        border: 1px solid #ddd;
    }

        .voucher h3 {
            margin-top: 0;
        }

        .voucher ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .voucher li {
            margin-bottom: 5px;
        }

</style>
</html>
