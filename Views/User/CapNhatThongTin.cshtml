@model WebGURDIAN.Models.NGUOIDUNG
@{
    ViewBag.Title = "CapNhatThongTin";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cập Nhật Thông Tin Người Dùng</title>
    <link rel="stylesheet" href="~/CSS/UpdateInfo.css" />
</head>
<body>
    <div class="container">
        <div class="profile-wrapper">
            <!-- Cột chứa thông tin người dùng -->
            <div class="col-info">
                @using (Html.BeginForm("CapNhatThongTin", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="info-item">
                        <label>Họ Tên: </label>
                        @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control" })
                    </div>
                    <div class="info-item">
                        <label>Ngày Sinh: </label>
                        @Html.TextBoxFor(m => m.NGAYSINH, "{0:dd/MM/yyyy}", new { @class = "form-control", type = "date" })
                    </div>
                    <div class="info-item">
                        <label>Địa Chỉ: </label>
                        @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control" })
                    </div>
                    <div class="info-item">
                        <label>Số Điện Thoại: </label>
                        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control" })
                    </div>
                    <div class="info-item">
                        <label>Email: </label>
                        @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control" })
                    </div>
                    <div class="info-item">
                        <label>Giới Tính: </label>
                        @Html.TextBoxFor(m => m.GIOITINH, new { @class = "form-control" })
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
<style>
    /* UpdateInfo.css */
    .container {
        width: 80%;
        margin: 0 auto;
    }

    .profile-wrapper {
        display: flex;
        flex-direction: column;
    }

    .col-info {
        margin-top: 20px;
    }

    .info-item {
        margin-bottom: 15px;
    }

        .info-item label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
    }

    .button-group {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        color: #fff;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-tertiary {
        background-color: #28a745;
    }
</style>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <h5 style="color:@(ViewBag.MessageType == "Success" ? "green" : "red"); text-align:center;">
        @ViewBag.Message
    </h5>
}
</html>
