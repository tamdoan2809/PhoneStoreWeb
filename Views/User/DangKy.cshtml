@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="container">
    <h1>Tạo tài khoản</h1>
    <p>Vui lòng điền thông tin bên dưới để tạo tài khoản</p>
    @using (Html.BeginForm("DangKy", "User", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="HoTenND">Họ Tên *</label>
            @Html.TextBox("HoTenND", "", new { @class = "form-control", placeholder = "Nhập họ tên" })
            <span class="text-danger">@ViewBag.Loi1</span>
        </div>
        <div class="form-group">
            <label for="TenDN">Tên Đăng Nhập *</label>
            @Html.TextBox("TenDN", "", new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
            <span class="text-danger">@ViewBag.Loi2</span>
        </div>
        <div class="form-group">
            <label for="MatKhau">Mật Khẩu *</label>
            @Html.Password("MatKhau", "", new { @class = "form-control", placeholder = "Nhập mật khẩu" })
            <span class="text-danger">@ViewBag.Loi3</span>
        </div>
        <div class="form-group">
            <label for="Rematkhau">Xác Nhận Mật Khẩu *</label>
            @Html.Password("Rematkhau", "", new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
            <span class="text-danger">@ViewBag.Loi4</span>
        </div>
        <div class="form-group">
            <label for="DienThoai">Số Điện Thoại *</label>
            @Html.TextBox("DienThoai", "", new { @class = "form-control", placeholder = "Nhập số điện thoại" })
            <span class="text-danger">@ViewBag.Loi5</span>
        </div>
        <div class="form-group">
            <label for="NgaySinh">Ngày Sinh</label>
            @Html.TextBox("NgaySinh", "", new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">
            <label for="Email">Địa Chỉ Email *</label>
            @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Nhập địa chỉ email" })
            <span class="text-danger">@ViewBag.Loi6</span>
        </div>
        <div class="form-group">
            <label for="GioiTinh">Giới Tính *</label>
            @Html.TextBox("GioiTinh", "", new { @class = "form-control", placeholder = "Nhập giới tính của bạn" })
            <span class="text-danger">@ViewBag.Loi7</span>
        </div>
        <div class="form-group">
            <label for="DiaChi">Địa Chỉ *</label>
            @Html.TextBox("DiaChi", "", new { @class = "form-control", placeholder = "Nhập địa chỉ của bạn" })
            <span class="text-danger">@ViewBag.Loi8</span>
        </div>
        <div class="form-group">
            <input type="checkbox" id="subscribe" checked />
            <label for="subscribe">Đăng ký nhận thông tin và ưu đãi từ Guardian</label>
        </div>
        <p class="login-link">
            Nếu bạn đã có tài khoản,
            <a href="~/User/DangNhap" class="highlight">đăng nhập ngay!</a>
        </p>
        <button type="submit" class="btn-register">ĐĂNG KÝ</button>
    }
</div>
